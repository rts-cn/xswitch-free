<configuration name="verto.conf" description="HTML5 Verto Endpoint">
    <settings>
      <param name="debug" value="0"/>
      <!-- seconds to wait before hanging up a disconnected channel -->
      <!-- <param name="detach-timeout-sec" value="120"/> -->
      <!-- enable broadcasting all FreeSWITCH events in Verto -->
      <param name="enable-fs-events" value="true"/>
      <!-- enable broadcasting FreeSWITCH presence events in Verto -->
      <param name="enable-presence" value="true"/>
      <param name="event-channel-enable-hierarchy-deliver" value="true"/>
    </settings>

    <profiles>
      <profile name="default-v4">
        <param name="bind-local" value="$${local_ip_v4}:$${VERTO_WS_PORT}"/>
        <param name="bind-local" value="$${local_ip_v4}:$${VERTO_WSS_PORT}" secure="true"/>
        <param name="force-register-domain" value="$${domain}"/>
        <param name="secure-combined" value="$${certs_dir}/wss.pem"/>
        <param name="secure-chain" value="$${certs_dir}/wss.pem"/>
        <param name="userauth" value="true"/>
        <!-- setting this to true will allow anyone to register even with no account so use with care -->
        <param name="blind-reg" value="false"/>
        <param name="mcast-ip" value="224.1.1.1"/>
        <param name="mcast-port" value="1337"/>
        <param name="rtp-ip" value="$${local_ip_v4}"/>
        <param name="ext-rtp-ip" value="$${ext_rtp_ip}"/>
        <param name="local-network" value="localnet.auto"/>
        <param name="outbound-codec-string" value="opus,vp8"/>
        <param name="inbound-codec-string" value="opus,vp8"/>
        <param name="apply-candidate-acl" value="localnet.auto"/>
        <param name="apply-candidate-acl" value="wan_v4.auto"/>
        <param name="apply-candidate-acl" value="rfc1918.auto"/>
        <param name="apply-candidate-acl" value="any_v4.auto"/>
        <param name="timer-name" value="soft"/>
        <param name="xui-auth" value="hash"/>
        <!-- <param name="xui-auth" value="jwt secret"/> -->
        <param name="options-cross-domain" value="*"/>
  
        <vhosts>
          <vhost domain="localhost">
            <param name="alias" value="seven.local freeswitch.org"/>
            <param name="root" value="$${base_dir}/xui/www"/>
            <param name="script-root" value="$${base_dir}/xui/lua/xui"/>
            <param name="index" value="index.html"/>
  <!--
            <param name="auth-realm" value="FreeSWITCH"/>
            <param name="auth-user" value="freeswitch"/>
            <param name="auth-pass" value="rocks"/>
  -->
            <rewrites>
              <rule expression="^/api" value="/init.lua"/>
            </rewrites>
          </vhost>
        </vhosts>
      </profile>
    </profiles>
  </configuration>
